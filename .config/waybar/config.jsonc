{
  "layer": "top",
  "position": "top",
  "modules-left": [
    "wlr/workspaces"
  ],
  //"modules-center": [
   // "mpd"
  //],
  "modules-right": [
    "idle_inhibitor", 
    "pulseaudio", 
    "network", 
    "battery", 
    "backlight", 
    "clock",
    "tray"  
  ],
  //////////////////////////////////
  "wlr/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "一",
      "2": "二",
      "3": "三",
      "4": "四",
      "5": "五",
      "6": "六",
      "7": "七",
      "8": "八",
      "9": "九"
    },
    "format-active": " {icon} ",
    "on-click": "activate"
  },
  
"river/tags": {
    "num-tags": 9,
    "tag-labels": ["一","二","三","四","五","六","七","八","九"]
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": " ",
            "deactivated": " "
        },
        "on-click": "way-inhibitor"
    },
    "tray": {
        "spacing": 10
    },

  
"clock": {
        "format": "{:%A, %B %d, %Y - %I:%M %p}",
        "tooltip-format": "{calendar}",
        "interval": 30,
        "on-click": "notify-send history-pop"
    },
    "backlight": {
        "device": "intel_backlight",
        "scroll-step": 5,
	"format": "{percent}% {icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""]
    },
    "battery": {
        "format": "<span font='JetBrains Mono Nerd Font'>{icon}</span>  {capacity}% - {time}",
        "format-icons": ["", "", "", "", ""],
        "format-time": "{H}h{M}m",
        "format-charging": "<span font='JetBrains Mono Nerd Font'></span>  <span font='JetBrains Mono Nerd Font'>{icon}</span>  {capacity}% - {time}",
        "format-full": "<span font='JetBrains Mono Nerd Font'></span>  <span font='JetBrains Mono Nerd Font'>{icon}</span>  Charged",
        "interval": 30,
        "states": {
            "warning": 25,
            "critical": 10
        },
        "tooltip": false,
    },

  "memory": {
    "interval": 30,
    "format": "{used:0.1f}/{total:0.1f}G"
  },
 "network": {
        "format-wifi": "{essid} ",
        "tooltip-format": "via {gwaddr} {ifname}",
        "format-disconnected": "wifi",
        "on-click": "wofi-wifi-menu",
    }, 
"pulseaudio": {
        "scroll-step": 5, // %, can be a float
        "format": "{icon} {volume}%",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },
  
}
